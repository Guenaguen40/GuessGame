<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StagesActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:weightSum="21"
    android:background="@color/bleu">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonStage_Easy"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/green"
        android:text="@string/easy_stage"
        android:textSize="40sp"
        android:textColor="@color/white"
        app:cornerRadius="800dp"
        app:iconSize="90dp"
        android:layout_marginBottom="50dp"
        app:icon="@drawable/s1"
        app:iconTint="@null"
        app:tint="@null" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonStage_Hard"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/green"
        android:text="@string/Hard_stage"
        android:textSize="40sp"
        android:textColor="@color/white"
        app:cornerRadius="800dp"
        app:iconSize="90dp"
        app:icon="@drawable/s2"
        app:iconTint="@null"
        app:tint="@null" />

</LinearLayout>